<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#9970765A" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="2dp" android:right="2dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#99A0A97F" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/white" />
                    <solid android:color="#CC70765A" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="2dp" android:right="2dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#CCA0A97F" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>