<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#CCFFFFFF" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#9970765A" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#99A0A97F" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#CC70765A" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fea8a7" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>